# Run wav's through STT engine
for wavFilename in `find  resources/stt/wav -name '*.wav'`; do
  ./vaani -m -s ws://venv.us-west-2.elasticbeanstalk.com send $wavFilename > ${wavFilename/%.wav/.json};
done

# Calculate STT statistics
sentence_count=`find resources/stt/wav -name "*.json" | wc -l`
sentence_error_count=`grep -lv "status: 0" resources/stt/wav/*.json | wc -l`
sentence_error_rate=`echo print $sentence_error_count/$sentence_count. | python`

# Print STT statistics
echo "sentence count" $sentence_count
echo "sentence error count" $sentence_error_count
echo "sentence error rate" $sentence_error_rate
